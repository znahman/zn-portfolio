{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["dom", "esnext", "es2015", "es2016", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "skipLibCheck": true,
        "target": "es2015",
        "types": ["jest", "@testing-library/jest-dom"]
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "gatsby-*.js", "jest.config.js"],
    "exclude": ["node_modules/*", "public/*", "cypress"]
}
