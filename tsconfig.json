{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": [
            "dom",
            "esnext",
            "es2015",
            "es2016",
            "es2017"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "skipLibCheck": true,
        "target": "es2015"
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ]
}